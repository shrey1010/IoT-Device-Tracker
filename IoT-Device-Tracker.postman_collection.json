{
  "info": {
    "name": "IoT Device Tracker",
    "_postman_id": "your-unique-id",
    "description": "Postman collection for testing the IoT Device Tracker APIs.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create a Device",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"uid\": \"device-uid-1234\",\n  \"name\": \"Test Device\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/devices/",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["api", "devices"]
        }
      }
    },
    {
      "name": "Delete a Device",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "http://127.0.0.1:8000/api/devices/{{device-uid}}/",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["api", "devices", "{{device-uid}}"]
        }
      }
    },
    {
      "name": "Retrieve a Device",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://127.0.0.1:8000/api/devices/{{device-uid}}/",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["api", "devices", "{{device-uid}}"]
        }
      }
    },
    {
      "name": "List All Devices",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://127.0.0.1:8000/api/devices/",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["api", "devices"]
        }
      }
    },
    {
      "name": "Retrieve Readings",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://127.0.0.1:8000/api/devices/{{device-uid}}/readings/{{parameter}}/?start_on=2024-01-01T00:00:00&end_on=2024-01-02T00:00:00",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": [
            "api",
            "devices",
            "{{device-uid}}",
            "readings",
            "{{parameter}}"
          ],
          "query": [
            {
              "key": "start_on",
              "value": "2024-01-01T00:00:00"
            },
            {
              "key": "end_on",
              "value": "2024-01-02T00:00:00"
            }
          ]
        }
      }
    }
  ]
}
